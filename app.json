{
  "expo": {
    "name": "TempoRun",
    "slug": "TempoRun",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "temporun",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#1C1B1F"
    },
    "ios": {
      "backgroundColor": "#1C1B1F"
    },
    "android": {
      "backgroundColor": "#1C1B1F",
      "package": "com.temporun.app",
      "softwareKeyboardLayoutMode": "pan",
      "allowBackup": true,
      "foregroundService": {
        "name": "TempoRun Service",
        "notificationTitle": "TempoRun",
        "notificationBody": "TempoRun is running"
      }
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFramework": "static"
          },
          "android": {
            "kotlinVersion": "1.9.25"
          }
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-google-signin/google-signin",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow TempoRun to use your location for tracking even when the app is inactive.",
          "locationAlwaysPermission": "Allow TempoRun to use your location for tracking even when the app is inactive.",
          "locationWhenInUsePermission": "Allow TempoRun to use your location for tracking."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "72d060b9-073b-4c82-98e8-e82e2cc5c8e9"
      }
    },
    "owner": "allmall"
  }
}
